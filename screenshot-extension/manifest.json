{
  "manifest_version": 3,
  "name": "Website Screenshot Tool",
  "description": "Take a screenshot of the current website.",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Take Screenshot"
  }
}
